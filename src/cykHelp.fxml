                        <ImageView fitHeight="18.0" fitWidth="18.0" layoutX="215.0" layoutY="220.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@back.png" />
                            </image>
                        </ImageView>
                        <ImageView fitHeight="18.0" fitWidth="18.0" layoutX="227.0" layoutY="235.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@next.png" />
                            </image>
                        </ImageView>
                        <Text layoutX="14.0" layoutY="314.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Anzeige:">
